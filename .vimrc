map <Space> <Nop>
let mapleader=" "

set ignorecase
set smartcase

set scrolloff=7 " 3 lines above/below cursor when scrolling

set incsearch
set hlsearch
set showmode

" suppress annoying sounds
set visualbell
set noerrorbells

set relativenumber
set number

nnoremap <Leader>; A;<Esc>
nnoremap <C-a> ggVG
